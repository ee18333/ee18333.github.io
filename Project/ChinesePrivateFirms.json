{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Chinese firms taking over the world",
    "subtitle": "left axis market share, right axis apps download",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 12,
    "anchor": "start",
    "color": "black",
    "fontSize": 16,
    "font": "Italic"
  },
  "config": {"background": "#fffdfd", "view": {"stroke": "transparent"}},
  "height": "container",
  "width": "container",
  "data": {
    "name": "myData",
    "url": "https://raw.githubusercontent.com/ee18333/ee18333.github.io/main/All%20firms.csv"
  },
  "encoding": {"x": {"field": "Date", "title": null, "type": "temporal"}},
  "layer": [
    {
      "mark": {"type": "line", "point": false, "strokeWidth": 3, "width": 1},
      "encoding": {
        "y": {
          "field": "Xiaomi",
          "type": "quantitative",
          "title": "",
          "axis": {"grid": false, "labelColor": "darkorange", "format": ","}
        },
        "color": {
          "datum": "Xiaomi",
          "scale": {"range": ["darkorange", "green", "darkolivegreen"]},
          "legend": {"orient": "top-left"}
        }
      }
    },
    {
      "mark": {"type": "line", "point": false, "strokeWidth": 3, "width": 1},
      "encoding": {
        "y": {
          "field": "Tiktok",
          "type": "quantitative",
          "title": "",
          "axis": {"grid": "false", "labelColor": "green", "format": false}
        },
        "color": {
          "datum": "Tiktok",
          "scale": {"range": ["darkorange", "green", "darkolivegreen"]},
          "legend": {"orient": "top-left"}
        }
      }
    },
    {
      "mark": {
        "type": "line",
        "point": false,
        "color": "skyblue",
        "strokeWidth": 3
      },
      "encoding": {
        "y": {
          "field": "Shein",
          "type": "quantitative",
          "title": "",
          "axis": {"grid": null, "labelColor": false, "format": ""}
        },
        "color": {
          "datum": "Shein",
          "scale": {"range": ["darkorange", "green", "darkolivegreen"]},
          "legend": {"orient": "top-left"}
        }
      }
    }
  ],
  "resolve": {"scale": {"y": "independent"}}
}
