{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/ee18333/ee18333.github.io/main/debt.csv",
    "format": {"type": "csv"}
  },
  "config": {"background": "#fffdfd", "view": {"stroke": "transparent"}},
  "height": 300,
  "width": "container",
  "title": {
    "text": "Debt-trap diplomacy",
    "subtitle": "measured in US dollars in billions. Source: Wikipedia",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black",
    "fontSize": 18,
    "font": "Italic"
  },
  "mark": {"type": "circle", "stroke": "#2e2f2f"},
  "encoding": {
    "y": {
      "field": "Country",
      "type": "ordinal",
      "title": null,
      "sort": ["Maldives", "Pakistan", "Africa", "Tajikistan"]
    },
    "x": {
      "field": "Date",
      "type": "temporal",
      "title": null,
      "axis": {"grid": true, "gridColor": "black"}
    },
    "size": {
      "field": "debt",
      "type": "quantitative",
      "scale": {"rangeMin": 0, "rangeMax": 4000},
      "legend": null
    },
    "color": {
      "field": "Country",
      "scale": {"range": ["#76ba95", "#b776ba", "#769bba", "ba9576"]},
      "legend": null
    },
    "opacity": {"value": 0.8},
    "tooltip": [{"field": "Country"}, {"field": "debt"}]
  }
}
