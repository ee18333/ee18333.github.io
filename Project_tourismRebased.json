{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
       
  "title": {
      "text": "Tourism departure",
      "subtitle":["in billions. Rebased, 1997=100. Source: World Bank.",""],
      "subtitleFontStyle":"italic",
      "subtitleFontSize": 10,
      "anchor": "start",
      "color": "black",
      "fontSize": 18,
      "font": "Italic"},
      
  "data": {
      "url": "https://raw.githubusercontent.com/ee18333/ee18333.github.io/main/Project_Tourism.csv"
      },
  
  "transform": [
      {"calculate": "datum.United_States/78481000*100", "as": "United_States_Index"},
      {"calculate": "datum.China/5324000*100", "as": "China_Index"},
      {"calculate": "datum.Europe_Central_Asia/379353565.4*100", "as": "Europe_Central_Asia_Index"},
      {"calculate": "datum.OECD_members/576749178.2*100", "as": "OECD_members_Index"},
      {"calculate": "datum.World/894106626.9*100", "as": "World_Index"},
      {"calculate": "datum.High_income/78481000,*100", "as": "High_income_Index"}
      ],
      
  "XYZrepeat": {"layer": ["United_States","Europe_Central_Asia", "China", "OECD_members", "World", "High_income"]},
  "repeat": {"layer": ["United_States_Index", "China_Index", "Europe_Central_Asia_Index", "World_Index", "OECD_members_Index", "High_income_Index"]},
  
  "config": {"background": "#fffdfd", "view": {"stroke": "transparent"}},
  "height": "container",
  "width": "container", 
  
  "spec": {
      "mark": {   
          "type":"line",
          "strokeWidth":1},    
  
      "encoding": {
          "x": {
              "field": "Date",
              "type": "temporal",
              "title":null,
              "axis":{
                "grid": false
              }},
  
          "y": {
              "field": {"repeat": "layer"},
              "type": "quantitative",
              "title": null},
  
          "color": {
              "datum": {"repeat": "layer"},
              "scale": {"range": ["black", "green", "orange", "pink", "blue","red","plum"]},
              "legend": {
                "orient":"top-left",
                "fillColor":"#fffdfd"}}
                } 
          }
  }
