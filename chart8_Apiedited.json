{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
    "description": "Emissions data using satellite imagary",
    
    "data": {"url": "https://api.v2.emissions-api.org/api/v2/carbonmonoxide/average.json?country=us&begin=2012-07-01&end=2022-07-01"},
  
    "mark":{
      "type": "trail",
      "color":"darkblue",
      "opacity":1
    },
     
    "width":"container",
    
    "encoding": {
      
      "x": {
        "field": "end", 
        "type": "temporal", 
        "xxtimeUnit":"yearmonthdate",
        "title":null
        },
  
      "y": {
        "field": "average", 
        "type": "quantitative",
        "scale": {"domain": [0.02, 0.050]},
        "title":null
        },
  
      "xxcolor":{
        "field":"end", 
        "timeUnit":"year", 
        "scale": {"scheme": "inferno"}
      }
    }
  }
  
