{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Tourism departure",
    "subtitle": ["in millions. Source: World Bank.", ""],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black",
    "fontSize": 18,
    "font": "Italic"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/ee18333/ee18333.github.io/main/Tourism_countries.csv",
    "format": {"type": "csv"}
  },
  "config": {"background": "#fffdfd", "view": {"stroke": "transparent"}},
  "height": 300,
  "width": 300,
  "mark": {"type": "line", "point": false, "strokeWidth": 3},
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false}
    },
    "y": {
      "field": "Tourism in millions",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": false}
    },
    "color": {
      "condition": {
        "param": "hover",
        "field": "Country_name",
        "type": "nominal",
        "legend": {"orient": "top-left"},
        "title": null,
        "scale": {"scheme": "set1"}
      },
      "value": "black"
    },
    "tooltip": [
      {"field": "Country_name", "title": "Country"},
      {"field": "Tourism in millions", "type": "quantitative", "title": "Tourism departure in millions"}
    ],
    "opacity": {"condition": {"param": "hover", "value": 1}, "value": 0.2}
  },
  "layer": [
    {
      "description": "transparent layer to make it easier to trigger selection",
      "params": [
        {
          "name": "hover",
          "value": [{"Country_name": "China"}],
          "select": {
            "type": "point",
            "fields": ["Country_name"],
            "on": "mouseover"
          }
        }
      ],
    "mark": {"type": "line", "strokeWidth": 8, "stroke": "transparent"}
    },
    {"mark": "line"},
    {"encoding": {
        "x": {"aggregate": "max", "field": "Tourism"},
        "y": {"aggregate": {"argmax": "Tourism"}, "field": "Tourism"}
      },
      "layer": [
        {"mark": {"type": "circle"}},
        {"mark": {"type": "text", "align": "bottom"},
          "encoding": {
            "text": {
              "field": "Country_name",
              "type": "nominal",
              "title": "Country"
            }
          }
        }
      ]
    }
  ]
}
