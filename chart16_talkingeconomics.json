{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "CPI of all items and energy price comparison",
    "subtitle": "of the UK. Source: FRED",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 12,
    "anchor": "start",
    "color": "black",
    "fontSize": 16,
    "font": "Italic"
  },
  
  "data": {
    "url": "https://raw.githubusercontent.com/ee18333/ee18333.github.io/main/W8.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {"filter": {"field": "category", "oneOf": ["CPI: Energy for UK", "CPI of All Items in the UK"]}}
  ],
  "config": {"background": "#fffdfd", "view": {"stroke": "transparent"}},
  "height": 300,
  "width": "container",
  "mark": {"type": "line", "point": false},
  "encoding": {
    "x": {
      "field": "DATE",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false},
      "timeUnit": "yearmonth"
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": true},
      "scale": {"domain": [100, 120]}
    },
    "color": {
      "field": "category",
      "type": "nominal",
      "scale": {"scheme": "tableau10"},
      "title": "",
      "legend": {"orient": "top-left", "fillColor": "#FcFdFd"}
    }
  }
}
