{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Youth Unemployment Rate for Hong Kong SAR, China",
    "subtitle": "in percentage. Source: FRED",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 12,
    "anchor": "start",
    "color": "black",
    "fontSize": 16,
    "font": "Italic"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/ee18333/ee18333.github.io/main/Youth%20Unemployment%20Rate%20for%20Hong%20Kong%20SAR%2C%20China.json",
    "format": {"type": "json", "property": "observations"}
  },
  "config": {"background": "#fffdfd", "view": {"stroke": "transparent"}},
  "height": 300,
  "width": "container",
  "transform": [
    {"calculate": "year(datum.date)", "as": "year"},
    {"filter": "datum.year>=minYear"},
    {"filter": "datum.year<=maxYear"}
  ],
  "params": [
    {
      "name": "minYear",
      "value": 1991,
      "bind": {
        "input": "range",
        "min": 1991,
        "max": 2021,
        "step": 1,
        "name": "Start year:"
      }
    },
    {
      "name": "maxYear",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 1991,
        "max": 2021,
        "step": 1,
        "name": "End year:"
      }
    }
  ],
  "mark": {
    "type": "area",
    "cursor": "pointer",
    "line": {"color": "#4b56b1"},
    "color": {
      "x1": 1,
      "y1": 1,
      "x2": 1,
      "y2": 0,
      "gradient": "linear",
      "stops": [
        {"offset": 0, "color": "white"},
        {"offset": 1, "color": "#4b56b1"}
      ]
    }
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false}
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": true}
    },
    "tooltip": [
      {"field": "date", "type": "temporal", "title": "Year", "format": "%Y"},
      {"field": "value", "title": "Youth Unemployment Rate"}
    ]
  }
}
