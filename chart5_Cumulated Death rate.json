{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": " Cumulated Death Rate from Covid",
    "subtitle": "by 60 days",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 12,
    "anchor": "start",
    "color": "black",
    "fontSize": 16,
    "font": "Italic"
  },
  "data": {
    "url": "https://api.coronavirus.data.gov.uk/v2/data?areaType=ltla&metric=cumDeaths60DaysByDeathDateRate&format=csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "filter": {
        "field": "areaName",
        "oneOf": ["Hounslow", "Westminster", "Surrey Heath"]
      }
    }
  ],
  "config": {"background": "#fffdfd", "view": {"stroke": "transparent"}},
  "height": 300,
  "width": "container",
  "mark": {"type": "line", "point": false, "strokeWidth": 4},
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false}
    },
    "y": {
      "field": "cumDeaths60DaysByDeathDateRate",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": false}
    },
    "color": {
      "field": "areaName",
      "type": "nominal",
      "scale": {"scheme": "yellowgreenblue"},
      "title": "Region",
      "legend": {"orient": "top-left", "fillColor": "#fffdfd"}
    }
  }
}
