{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Chinese government's influence on Hong Kong",
    "subtitle": ["Source: WorldBank"],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 12,
    "anchor": "start",
    "color": "black",
    "fontSize": 18,
    "font": "Italic"
  },
  "config": {"background": "#fffdfd", "view": {"stroke": "transparent"}},
  "height": 130,
  "width": 130,
  "data": {
    "url": "https://raw.githubusercontent.com/ee18333/ee18333.github.io/main/Project/Hong%20Kong.csv"
  },
  "transform": [
    {
      "fold": [
        "Voice and Accountability",
        "Political Stability No Violence",
        "Gross fixed capital formation (% of GDP)",
        "GDP growth (annual %)"
      ],
      "as": ["indicator", "value"]
    },
    {"calculate": "year(datum.Date)", "as": "year"},
    {"filter": "datum.year>=minYear"},
    {"filter": "datum.year<=maxYear"}
  ],
  "params": [
    {
      "name": "minYear",
      "value": 1998,
      "bind": {
        "input": "range",
        "min": 1998,
        "max": 2020,
        "step": 1,
        "name": "Start year:"
      }
    },
    {
      "name": "maxYear",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 1998,
        "max": 2020,
        "step": 1,
        "name": "End year:"
      }
    }
  ],
  "mark": {"type": "line", "strokeWidth": 4},
  "encoding": {
    "x": {
      "field": "Date",
      "type": "temporal",
      "title": null,
      "axis": {"grid": true}
    },
    "y": {"field": "value", "type": "quantitative", "title": null},
    "facet": {"field": "indicator", "columns": 2, "title": null},
    "tooltip": [
      {"field": "value", "type": "quantitative"},
      {"field": "Date", "type": "temporal", "format": "%Y"}
    ]
  },
  "resolve": {"scale": {"y": "independent"}}
}
