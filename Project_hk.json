{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Chinese government's influence on Hong Kong",
    "subtitle": ["Source: WorldBank"],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 12,
    "anchor": "start",
    "color": "black",
    "fontSize": 18,
    "font": "Italic"
  },
  "config": {"background": "#fffdfd", "view": {"stroke": "transparent"}},
  "height": 150,
  "width": 240,
  "data": {
    "url": "https://raw.githubusercontent.com/ee18333/ee18333.github.io/main/Hong%20Kong.csv"
  },
  "transform": [
    {
      "fold": [
        "Voice and Accountability",
        "Political Stability No Violence",
        "Gross fixed capital formation (% of GDP)",
        "GDP growth (annual %)"
      ],
      "as": ["indicator", "value"]
    }
  ],
  "mark": {"type": "line", "strokeWidth": 4},
  "encoding": {
    "x": {
      "field": "Date",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false}
    },
    "y": {"field": "value", "type": "quantitative", "title": null},
    "facet": {"field": "indicator", "columns": 2, "title": null}
  },
  "resolve": {"scale": {"y": "independent"}}
}
